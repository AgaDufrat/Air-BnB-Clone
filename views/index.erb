<div class="jumbotron">
  <h1 class="display-4">Welcome to MakersBnB</h1>
  <h2>
    <% if @user == nil %>
      Welcome
    <% else %>
      Welcome<%=", #{@user.username}" %>
    <% end %>
  </h2>
</div>
<div class="container">
<form action="/spaces/new" method="get">
  <input class="submit" type="submit" value="Add space" />
</form>
<br/>

<h2>Available spaces:</h2>
<% @spaces.each do |space| %>
  <% if space.booked != 't' %>
    Name: <%=space.name%><br>
    Description: <%=space.description%><br>
    Date available: <%=space.date_available%><br>
    Price per night: Â£<%=space.price%><br><br>
  <% end %>
<% end %>
</div>
