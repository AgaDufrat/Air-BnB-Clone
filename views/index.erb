<div class="jumbotron">
  <h1 class="display-4">Welcome to MakersBnB</h1>
  <h2>
    <% if @user == nil %>
      Welcome
    <% else %>
      Welcome<%=", #{@user.username}" %>
    <% end %>
  </h2>
</div>

<h2>Available spaces:</h2>
<form action="/spaces/new" method="get">
  <input class="submit" type="submit" value="Add space" />
</form>
<br/>


  <form action="/spaces/search" method="post">
    <input type="date" name="date_from" value="">
    <input type="date" name="date_to" value="">
    <input class="submit" type="submit" value="Search" />
  </form>


<ul>
<% @spaces.each do |space| %>
  <% if space.booked != 't' %>
    Name: <%=space.name%><br>
    Description: <%=space.description%><br>
    Date available: <%=space.date_available%><br><br>
  <% end %>
<% end %>
</ul>
